<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/clubName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="ClubName"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/clubAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/clubName"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="Club Address will go on long"
            android:textColor="#a9a9a9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/clubsport"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/clubAddress"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="ClubSport"
            android:textColor="#a9a9a9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/clubprice"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clubAddress"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/clubsport"
            android:text="ClubPrice"
            android:textColor="#a9a9a9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/clubsport"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="Booking Date"
            android:textColor="#a9a9a9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/clubsport"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/clubsport"
            android:text="Booking time"
            android:textColor="#a9a9a9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="People count"
            android:textColor="#a9a9a9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/date"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/clubsport"
            android:text="cost"
            android:textColor="#a9a9a9"
            android:textSize="18sp" />

    </RelativeLayout>



</androidx.cardview.widget.CardView>